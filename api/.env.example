# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=Pocket Claude API
VERSION=0.1.0
DESCRIPTION=Pocket Claude Backend API
ENVIRONMENT=development
DEBUG=true

# CORS Origins (adjust for production)
BACKEND_CORS_ORIGINS=["http://localhost:5173", "capacitor://localhost", "http://localhost:8000"]

# Database
# SQLite (default for development)
DATABASE_URL=sqlite+aiosqlite:///./pocket_claude.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/pocket_claude

# Encryption Key (REQUIRED for token storage)
# Generate with: uv run python -c 'from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())'
# IMPORTANT: Generate a new key for each environment. This placeholder WILL cause an error if not replaced.
ENCRYPTION_KEY=YOUR_GENERATED_ENCRYPTION_KEY_HERE

# Git OAuth Client IDs (optional - required for OAuth to work)
# See docs/GIT_OAUTH_SETUP.md for setup instructions
GITHUB_CLIENT_ID=
GITLAB_CLIENT_ID=
GITEA_CLIENT_ID=
